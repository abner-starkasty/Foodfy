{% extends 'layout.njk' %}
{% import 'parts/header.njk' as nunjucks %}
{% import 'parts/cardsRecipe.njk' as clientArea %}

{% block head %}
  <title>FoodFy | Resultados para {{filter}}</title>
{% endblock %}

{% block content %}
  {{ nunjucks.checkHeader('', '', filter) }}

  <section id="recipe-page">
    <h1>Buscando por "{{filter}}"</h1>

    {% include 'parts/pagination.njk' %}

    {% if not message %}

      {{ clientArea.cardsRecipe('', 'client', recipes) }}

    {% else %}

      {% include 'parts/message.njk' %}

    {% endif %}
  </section>

  {% include 'parts/footer.njk' %}
{% endblock %}