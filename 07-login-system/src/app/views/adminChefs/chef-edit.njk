{% extends 'layout.njk' %}
{% import 'parts/header.njk' as nunjucks %}

{% block head %}
  <title>FoodFy - Admin | Editar chef</title>
{% endblock %}

{% block content %}
  {{ nunjucks.checkHeader('admin-area', '') }}

  <section id="chef-create">
    <div class="header-form">
      <h1>Editando chef</h1>

      <div>
        <form action="/admin/chefs?_method=DELETE" id="delete-chef" method="POST" data-recipe="{{chef.number_recipes}}">
          <button type="submit" form="delete-chef">
            <span class="material-icons">delete</span>
            Deletar
          </button>
          <input type="hidden" name="id" value="{{chef.id}}">
          <input type="hidden" name="current_file" value="{{chef.file_id}}">
        </form>
        <button type="submit" form="chef-form">
          <span class="material-icons">save</span>
          Salvar chef
        </button>
      </div>
    </div>

    <form 
      id="chef-form" 
      action="/admin/chefs?_method=PUT" 
      method="POST" 
      enctype='multipart/form-data'
    >
      
      {% include './chef-fields.njk' %}

      <input 
        type="hidden" 
        name="id" 
        value="{{ chef.id }}"
      >
    </form>
  </section>

{% endblock %}