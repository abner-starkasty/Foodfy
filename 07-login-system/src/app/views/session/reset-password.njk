{% extends 'layout.njk' %}
{% import 'parts/header.njk' as nunjucks %}

{% block head %}
  <title>FoodFy - Criar nova senha</title>
{% endblock %}

{% block content %}
  {{ nunjucks.checkHeader('session', '') }}

  <section id="session" class="reset-password">
    <form method="POST" action="/session/reset-password">

      <div class="header">
        <h1>Nova Senha</h1>
      </div>

      <div class="fields">
        {% include './reset-fields.njk' %}
      </div>      
      
      <div class="footer">
        <button class="button" type="submit">Nova Senha</button>
      </div>
    </form>
  </section>

{% endblock %}