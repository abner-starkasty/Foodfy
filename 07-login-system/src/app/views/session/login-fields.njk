<div class="input-block">
  <label for="email">Email</label>
  <input 
    {% if error %}class="input-error"{%endif%}
    id="email"
    type="email" 
    name="email" 
    value="{{user.email}}"
    placeholder="Digite seu email"
    required
  />
</div>

<div class="input-block">
  <label for="password">Senha</label>
  <input 
    {% if error %}class="input-error"{%endif%}
    id="password"
    type="password" 
    name="password" 
    placeholder="Digite sua senha"
    required
  />
</div>