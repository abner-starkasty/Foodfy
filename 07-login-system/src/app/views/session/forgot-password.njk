{% extends 'layout.njk' %}
{% import 'parts/header.njk' as nunjucks %}


{% block head %}
  <title>FoodFy - Recuperar senha</title>
{% endblock %}

{% block content %}
  {{ nunjucks.checkHeader('session', '') }}

  <section id="session" class="forgot-password">
    <form method="POST" action="/session/forgot-password">

      <div class="header">
        <h1>Esqueceu a senha?</h1>
      </div>

      <div class="fields">
        <div class="input-block">
          <label for="email">Email</label>
          <input 
            id="email"
            type="email" 
            name="email" 
            value="{{user.email}}"
            placeholder="Digite seu email para recuperar sua senha"
            required
          />
        </div>
      </div>      
      
      <div class="footer">
        <button class="button" type="submit">Recuperar</button>
      </div>
    </form>
  </section>

{% endblock %}