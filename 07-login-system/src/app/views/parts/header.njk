{% macro checkHeader(type, ignoreFilter, filter) %}

  {% if type == 'admin-area' %}

    <header class="{{type}}">
      <div class="box-menu">
        <a href="/">          
          <img src="/assets/logo-admin.png" alt="logo">          
        </a>

        <nav class="menu">
          <a href="/admin/recipes">Receitas</a>
          <a href="/admin/chefs">Chefs</a>
        </nav>

        <span class="material-icons change-theme">nights_stay</span>
      </div>
    </header>

  {% else %}
  
    <header class="">
      <div class="box-menu">
        <a href="/">          
          <img src="/assets/logo.png" alt="logo">          
        </a>

        <nav class="menu">
          <a href="/">
            <span class="material-icons">home</span>
          </a>
          <a href="/about">Sobre</a>
          <a href="/recipes">Receitas</a>
          <a href="/chefs">Chefs</a>
        </nav>

        {% if ignoreFilter != "true"  %}
          <form action="/search/recipes" method="GET">
            <div class="input-block">
              <input 
                type="text" 
                name="filter" 
                value="{{filter}}"
                placeholder="Buscar uma receita"
              >
            </div>

            <button type="submit"><span class="material-icons">search</span></button>
          </form>
        {% endif %}

        <span class="material-icons change-theme">nights_stay</span>
      </div>
    </header>
    
  {% endif %}

{% endmacro %}