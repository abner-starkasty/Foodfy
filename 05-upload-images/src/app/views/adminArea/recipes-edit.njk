{% extends 'layout.njk' %}

{% block head %}
  <title>FoodFy - Admin | Editar receita</title>

  <link rel="stylesheet" href="/styles/partials/adminArea/recipes-form.css">
{% endblock %}

{% block header %}
  {% include './change-header.njk' %}
{% endblock %}

{% block content %}

  <div id="recipe-create">
    <div class="header-form">
      <h1>Editando receita</h1>
      
      <div>
        <form action="/admin/recipes?_method=DELETE" id="delete-recipe" method="POST">
          <button type="submit" form="delete-recipe">
            <span class="material-icons">delete</span>
            Deletar
          </button>
          <input type="hidden" name="id" value="{{recipe.id}}">
        </form>
        <button type="submit" form="recipe-form">
          <span class="material-icons">save</span>
          Salvar receita
        </button>
      </div>
    </div>

    <form action="/admin/recipes?_method=PUT" id="recipe-form" method="POST" enctype='multipart/form-data'>
      
      {% include './recipes-fields.njk' %}

      <input type="hidden" name="id" value="{{recipe.id}}">
    </form>
  </div>

{% endblock %}

{% block footer %}{% endblock  %}

{% block script %}
  <script src="/scripts/adminArea/addOrDeleteField.js"></script>
  <script src="/scripts/adminArea/alert-delete.js"></script>
  <script src="/scripts/adminArea/photoRecipe.js"></script>
{% endblock %}