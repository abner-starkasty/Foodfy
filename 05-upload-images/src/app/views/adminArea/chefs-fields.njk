<fieldset>  

  <div class="input-block">
    <label for="name">Nome</label>
    <input 
      type="text" 
      name="name" 
      value="{{ chef.name }}" 
      required
    />
  </div>

  <div class="avatar-block">
    <label for="image">Avatar</label>
    {% if file %}
      <input 
        id="{{ file.id }}"
        type="text" 
        name="avatar" 
        placeholder="{{ file.src }}"
        disabled
      />

      <input type="hidden" name="current_file" value="{{ file.id }}">
      <input type="hidden" name="removed_file">
    {% endif %}
    <div class="wrapper-photo">
      <div id="photos-chef-upload">
        <input 
          id="photos-input"
          type="file"
          name="photo_chef"
          accept="image/*"
          onchange="PhotoUploadChef.imageSent()"
        >
        <p>Enviar Avatar</p>
      </div>
    </div>    
  </div>

</fieldset>