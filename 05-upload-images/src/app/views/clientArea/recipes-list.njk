{% extends 'layout.njk' %}

{% block head %}
  <title>FoodFy | Receitas</title>

  <link rel="stylesheet" href="/styles/partials/clientArea/recipes.css">
  <link rel="stylesheet" href="/styles/partials/clientArea/cards.css">
  <link rel="stylesheet" href="/styles/partials/pagination.css">
{% endblock %}

{% block content %}

  <section id="recipe-page">
    <div 
      class="pagination"
      data-total="{{pagination.totalPages}}"
      data-page="{{pagination.page}}"
      data-filter="{{filter}}"
    ></div>

    <div class="cards">

      {% for recipe in recipes %}
        <div class="card" data-id={{recipe.id}}>
          <div class="recipe-image" style="background-image: url({{ recipe.image }})"></div>
          <p class="food-name">{{ recipe.title }}</p>
          <p class="by-chef">por {{ recipe.chef_name }}</p>
        </div>
      {% endfor %}

    </div>
  </section>

{% endblock %}

{% block script %}
  <script src="/scripts/pagination.js"></script>
  <script src="/scripts/clientArea/click-recipes.js"></script>
{% endblock %}