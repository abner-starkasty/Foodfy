<fieldset>  

  <div class="input-block">
    <label for="name">Nome</label>
    <input 
      type="text" 
      name="name" 
      value="{{item.name}}" 
      required
    />
  </div>

  <div class="input-block">
    <label for="image">Avatar</label>
    <input 
      type="url" 
      name="avatar_url" 
      value="{{item.avatar_url}}" 
      placeholder="http://"
      required
    />
  </div>

</fieldset>