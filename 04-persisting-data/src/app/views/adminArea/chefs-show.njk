{% extends 'layout.njk' %}

{% block head %}
  <title>FoodFy - Admin | {{ chef.name }}</title>

  <link rel="stylesheet" href="/styles/partials/chefs-detail.css">
  <link rel="stylesheet" href="/styles/partials/adminArea/admin-cards.css">
{% endblock %}

{% block header %}
  {% include './change-header.njk' %}
{% endblock %}

{% block content %}

  <section id="chef-detail">
    <div class="edit-chef">
      <h2>Chef: {{ chef.name }}</h2>
      <a href="/admin/chefs/{{ chef.id }}/edit">
        <span class="material-icons">edit</span>
        Editar chef
      </a>
    </div>

    <span class="avatar-container" style="background-image: url({{ chef.avatar_url }})"></span>

    <div class="chef-title">
      <h1>{{ chef.name }}</h1>
      <p>{{ chef.number_recipes }} receita(s)</p>
    </div>

    <div class="chef-recipes">
      <h2>Receitas</h2>

      <div class="cards">
        {% for recipe in recipes %}
          <div class="card">
            <span class="image-container" style="background-image: url({{ recipe.image }})"></span>
            <p class="food-name">{{ recipe.title }}</p>
            <p class="by-chef">por {{ recipe.chef_name }}</p>
            <a href="/admin/recipes/{{ recipe.id }}" class="view-details">
              <span class="material-icons">visibility</span>
              Visualizar
            </a>
          </div>
        {% endfor %}
      </div>
    </div>

  </section>

{% endblock %}

{% block footer %}{% endblock  %}