<!-- FoodFy -->

{% extends 'layout.njk' %}

{% block head %}
    <title>FoodFy - Receitas</title>
{% endblock %}

{% block content %}

    <section id="recipe-page">
        <div class="cards">

            {% for item in items %}
                <div class="card">
                    <img src="{{ item.image }}" alt="Imagem de {{ item.title }}">
                    <p class="food-name">{{ item.title }}</p>
                    <p class="by-chef">{{ item.author }}</p>
                </div>
            {% endfor %}
            {% for item in items %}
                <div class="card">
                    <img src="{{ item.image }}" alt="{{ item.title }}">
                    <p class="food-name">{{ item.title }}</p>
                    <p class="by-chef">{{ item.author }}</p>
                </div>
            {% endfor %}

        </div>
    </section>

{% endblock %}

{% block script %}
    <script src="/scripts.js"></script>
{% endblock %}