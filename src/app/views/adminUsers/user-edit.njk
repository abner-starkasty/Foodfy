{% extends 'layout.njk' %}
{% import 'parts/header.njk' as nunjucks %}

{% block head %}
  <title>FoodFy - Admin | Editar usuário</title>
{% endblock %}

{% block content %}
  {{ nunjucks.checkHeader('admin-area', '') }}

  <section id="user-create">
    <div class="header-form">
      <h1>Atualizar Usuário</h1>
      
      <div>
        <form action="/admin/users?_method=DELETE" id="delete-user" method="POST">
          <button type="submit" form="delete-user">
            <span class="material-icons">delete</span>
            Deletar
          </button>
          <input type="hidden" name="id" value="{{user.id}}">
        </form>
        <button type="submit" form="user-form">
          <span class="material-icons">save</span>
          Salvar
        </button>
      </div>
    </div>

    <form 
      id="user-form"
      class="user-edit" 
      action="/admin/users?_method=PUT"  
      method="POST"
    >
      
      {% include './user-fields.njk' %}

      <input 
        type="hidden" 
        name="id" 
        value="{{ user.id }}"
      >
      <input 
        id="check_is_admin"
        type="hidden" 
        name="check_is_admin"
        value="{{ user.is_admin }}"
      >
    </form>
  </section>

{% endblock %}