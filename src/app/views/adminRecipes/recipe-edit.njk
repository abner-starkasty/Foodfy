{% extends 'layout.njk' %}
{% import 'parts/header.njk' as nunjucks %}

{% block head %}
  <title>FoodFy - Admin | Editar receita</title>
{% endblock %}

{% block content %}
  {{ nunjucks.checkHeader('admin-area', '') }}

  <section id="recipe-create">
    <div class="header-form">
      <h1>Editando receita</h1>
      
      <div>
        <form action="/admin/recipes?_method=DELETE" id="delete-recipe" method="POST">
          <button type="submit" form="delete-recipe">
            <span class="material-icons">delete</span>
            Deletar
          </button>
          <input type="hidden" name="id" value="{{recipe.id}}">
        </form>
        <button type="submit" form="recipe-form">
          <span class="material-icons">save</span>
          Salvar receita
        </button>
      </div>
    </div>

    <form 
      id="recipe-form"
      action="/admin/recipes?_method=PUT"  
      method="POST" 
      enctype='multipart/form-data' 
      onsubmit="PhotosUpload.checkNumberFiles(event)"
    >
      
      {% include './recipe-fields.njk' %}

      <input type="hidden" name="id" value="{{recipe.id}}">
    </form>
  </section>

{% endblock %}